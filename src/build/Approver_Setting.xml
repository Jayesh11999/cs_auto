<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Functionality">
    <listeners>
        <listener class-name="Config.RetryListener"></listener>
    </listeners>

    <!-- 01 Approver_Settings -->
    <test name="verifyEditProfileDetailsFromSettingMenuByApprover Test">
        <classes>
            <class name="Tests.Approver_Setting_Tests">
                <methods>
                    <include name="verifyEditProfileDetailsFromSettingMenuByApprover"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- 02 Approver_Settings -->
    <test name="verifyApproverChangePasswordFunctionality Test">
        <classes>
            <class name="Tests.Approver_Setting_Tests">
                <methods>
                    <include name="verifyApproverChangePasswordFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- 03 Approver_Settings -->
    <test name="verifyApproverChangePasswordFunctionalityByEnteringWrongPasswordInCurrentPasswordField Test">
        <classes>
            <class name="Tests.Approver_Setting_Tests">
                <methods>
                    <include
                            name="verifyApproverChangePasswordFunctionalityByEnteringWrongPasswordInCurrentPasswordField"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- 04 Approver_Settings -->
    <test name="verifyApproverLogout Test">
        <classes>
            <class name="Tests.Approver_Setting_Tests">
                <methods>
                    <include name="verifyApproverLogout"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- 05 Approver_Settings -->
    <test name="verifyDeactivateAccountOfApproverAndRejectRequestByCO Test">
        <classes>
            <class name="Tests.Approver_Setting_Tests">
                <methods>
                    <include name="verifyDeactivateAccountOfApproverAndRejectRequestByCO"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>